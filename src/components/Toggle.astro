<div class="pr-8 absolute right-0 mt-6">
  <div class="flex flex-col items-end">
    <label class="toggle">
      <input type="checkbox" id="pageToggle">
      <span class="slider round" id="slider"></span>
    </label>
    <div class="text-gray-3 text-sm w-[160px]">See my previous version</div>
  </div>
</div>

<style>
  .toggle {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
    margin-bottom: 0.5rem;
  }
  
  .toggle input { 
    opacity: 0;
    width: 0;
    height: 0;
  }
  
  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #74726f;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    -webkit-transition: .4s;
    transition: .4s;
  }
  
  .slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: #FFFCF2;
    transition: .4s;
  }
  
  input:checked + .slider {
    background-color: #c17746;
  }
  
  input:focus + .slider {
    box-shadow: 0 0 1px #c17746;
  }
  
  input:checked + .slider:before {
    -webkit-transform: translateX(26px);
    transform: translateX(26px);
  }
  
  /* Rounded sliders */
  .slider.round {
    border-radius: 34px;
  }
  
  .slider.round:before {
    border-radius: 50%;
  }
</style>

<script>
  const checkbox = document.getElementById('pageToggle');

  checkbox.addEventListener('change', () => {
    if (checkbox.checked) {
      location.href = '/earthtone';
    } else {
      location.href = '/';
    }
  });

  if (location.pathname === '/earthtone') {
    checkbox.checked = true;
  } else {
    checkbox.checked = false;
}
</script>